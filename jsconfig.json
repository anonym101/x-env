{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "sourceMap": false,
    "checkJs":true,
    "esModuleInterop":true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6", 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, 
    "baseUrl": "."
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "lib": [
    "es2018",
    "dom"
  ],
  "include": ["libs", "index.js","exmaple/example.js"],
  "exclude": ["node_modules", "dist"]
}
