{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "module": "ES6",
    "target": "ES2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "src",
    "outDir": "dist/",
    "strict": true,
    "baseUrl": "./",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@interface":[
        "types/index.d.ts"
      ]
    },
  },
  "lib": [
    "es2018"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "DEV",
    "PROD",
    "TEST",
    "app.example",
    "node_modules",
    "dist",
    "esm"
  ]
}